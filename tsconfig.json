{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es2016", "dom", "esnext.asynciterable"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "api",
    "node_modules",
    "build",
    "build-api",
    "scripts",
    "coverage",
    "acceptance-tests",
    "webpack",
    "jest",
    "webpack.api.config.js",
    "src/setupTests.ts",
    "public/checkBrowserSupport.js"
  ]
}
