{
  "name": "aurora-konsoll",
  "groupId": "no.skatteetaten.aurora",
  "version": "0.1.1",
  "private": false,
  "author": {
    "name": "Skatteetaten"
  },
  "files": [
    "build",
    "build-api",
    "metadata"
  ],
  "dependencies": {
    "apollo-boost": "^0.1.7",
    "aurora-frontend-react-komponenter": "^1.0.6",
    "client-oauth2": "^4.2.1",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "qs": "^6.5.2",
    "react": "^16.4.0",
    "react-apollo": "^2.1.4",
    "react-dom": "^16.4.0",
    "react-router-dom": "^4.3.1",
    "react-scripts-ts": "2.16.0"
  },
  "scripts": {
    "start": "npm-run-all --parallel start:web start:api",
    "start:web": "react-scripts-ts start",
    "start:api": "npm run build:api -- --watch & nodemon --watch ./build-api --exec \"node ./build-api/server.js\"",
    "build": "npm-run-all --parallel build:web build:api",
    "build:web": "react-scripts-ts build",
    "build:api": "webpack --config webpack.api.config.js",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "clean": "rimraf build build-api coverage pom *.tgz",
    "test:once": "CI=true npm test",
    "test:coverage": "npm run test -- --coverage",
    "lint": "npm-run-all lint:prettier lint:tslint",
    "lint:fix": "npm-run-all lint:prettier-fix lint:tslint-fix",
    "lint:tslint": "tslint '{api,src}/**/*{.ts,.tsx}'",
    "lint:prettier": "prettier -l '{api,src}/**/*{.ts,.tsx,.css}'",
    "lint:tslint-fix": "tslint --fix '{api,src}/**/*{.ts,.tsx}'",
    "lint:prettier-fix": "prettier --write '{api,src}/**/*{.ts,.tsx,.css}'"
  },
  "prettier": {
    "singleQuote": true
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.0.0",
    "@types/node": "^8.10.19",
    "@types/prop-types": "^15.5.3",
    "@types/qs": "^6.5.1",
    "@types/react": "^16.3.16",
    "@types/react-dom": "^16.0.6",
    "@types/react-router-dom": "^4.2.7",
    "aurora-openshift": "0.0.12",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.4",
    "rimraf": "^2.6.2",
    "ts-loader": "^2.3.7",
    "typescript": "^2.9.1",
    "webpack": "^3.12.0"
  },
  "proxy": {
    "/api": {
      "target": "http://localhost:9090"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "!src/**/*.d.ts",
      "!src/setupTests.ts",
      "!src/services/registerServiceWorker.ts"
    ]
  }
}
