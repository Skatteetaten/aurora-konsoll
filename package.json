{
  "name": "aurora-konsoll",
  "groupId": "no.skatteetaten.aurora",
  "version": "0.1.1",
  "private": false,
  "author": {
    "name": "Skatteetaten"
  },
  "files": [
    "build",
    "build-api",
    "metadata"
  ],
  "dependencies": {
    "aurora-frontend-react-komponenter": "1.7.1",
    "cors": "2.8.5",
    "express": "4.17.1",
    "graphql": "14.5.0",
    "graphql-tag": "2.10.1",
    "http-proxy-middleware": "0.20.0-beta.2",
    "isomorphic-fetch": "2.2.1",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-konami-code": "1.4.0",
    "react-redux": "7.1.0",
    "react-router-dom": "5.0.1",
    "react-select": "2.4.3",
    "redux-thunk": "2.3.0",
    "redux-ts-utils": "3.2.2",
    "styled-components": "4.3.2",
    "typesafe-actions": "4.4.2",
    "uuid": "3.3.3"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "start:web": "react-scripts start",
    "start:api": "npm run build:api -- --watch & nodemon --watch ./build-api --exec \"node ./build-api/server.js\"",
    "build": "npm-run-all -pl build:web build:api",
    "build:web": "GENERATE_SOURCEMAP=false react-scripts build",
    "build:api": "webpack --config webpack.api.config.js --mode production",
    "test": "react-scripts test --transformIgnorePatterns \"<rootDir>/node_modules/(?!office-ui-fabric-react)/\"",
    "test:api": "jest api/*.ts",
    "eject": "react-scripts eject",
    "clean": "rimraf build build-api coverage pom *.tgz",
    "test:once": "CI=true npm test",
    "test:web:coverage": "CI=true npm run test -- --coverage",
    "test:coverage": "CI=true npm-run-all test:web:coverage test:api",
    "prettier": "prettier -l '{api,src}/**/*{.ts,.tsx,.css}'",
    "prettier:fix": "prettier --write '{api,src}/**/*{.ts,.tsx,.css}'"
  },
  "prettier": {
    "singleQuote": true
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-typescript": "7.3.3",
    "@types/cors": "2.8.6",
    "@types/enzyme": "3.10.3",
    "@types/enzyme-adapter-react-16": "1.0.5",
    "@types/express": "4.17.1",
    "@types/graphql": "14.2.3",
    "@types/http-proxy-middleware": "0.19.3",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/jest": "24.0.18",
    "@types/node": "11.13.8",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "@types/react-redux": "7.1.2",
    "@types/react-router-dom": "4.3.5",
    "@types/react-select": "2.0.17",
    "@types/styled-components": "4.1.18",
    "@types/uuid": "3.4.5",
    "aurora-ci-scripts": "1.0.1",
    "dotenv": "7.0.0",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "factory.ts": "0.5.0",
    "jest-each": "24.9.0",
    "nodemon": "1.19.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "react-scripts": "3.1.1",
    "redux-devtools-extension": "2.13.8",
    "rimraf": "3.0.0",
    "ts-loader": "5.4.4",
    "typescript": "3.5.3",
    "typescript-styled-plugin": "0.14.0",
    "webpack-cli": "3.3.7"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "proxy": "http://localhost:9090",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "!src/**/*.d.ts",
      "!src/setupTests.ts",
      "!src/services/registerServiceWorker.ts"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
