{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "build-api",
    "rootDir": "./api",
    "noEmit": false
  },
  "include": ["api"],
  "exclude": [
    "src",
    "node_modules",
    "build",
    "build-api",
    "scripts",
    "coverage",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "api/*.test.ts"
  ]
}
